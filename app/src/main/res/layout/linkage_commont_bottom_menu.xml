<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="13%w"
        android:background="#efeff4" >

        <TextView
            android:id="@+id/cancel"
            android:textSize="16sp"
            android:textColor="#58aeef" 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_marginLeftPercent="3%w"
            android:gravity="center"
            android:paddingRight="10dp"
            android:text="@string/cancle" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/ok"
            android:textSize="16sp"
            android:textColor="#58aeef"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_marginLeftPercent="3%w"
            app:layout_marginRightPercent="3%w"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="@string/ok" />
    </com.zhy.android.percent.support.PercentLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/main_divider" />

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <sing.earthquake.common.butommenu.LinkageMainPicker
            android:id="@+id/left"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:layout_heightPercent="50%w"
            android:layout_height="wrap_content"
            android:gravity="center" />

        <sing.earthquake.common.butommenu.LinkageMainPicker
            android:id="@+id/right"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:layout_heightPercent="50%w"
            android:gravity="center" />
    </com.zhy.android.percent.support.PercentLinearLayout>

</com.zhy.android.percent.support.PercentLinearLayout>